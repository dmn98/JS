<!DOCTYPE html><script>
'use strict';

  function cal(){
    let a = +prompt('a','');
      if(Number(a)){} else {
      alert('Только числа бля');
      return false;
    }
    let b = +prompt('b','');
      if(Number(b)){} else {
      alert('Только числа бля');
      return false;
    }
    let c = prompt('Оператор','');
        switch (c) {
          case '+':
            return a+b;
            break;
          case '-':
            return a-b;
            break;
          case '/':
            return a/b;
            break;
          case '*':
            return a*b;
            break;
    }

};
alert(cal());

</script>
